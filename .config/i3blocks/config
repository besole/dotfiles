color_inactive=#999999
color_warning=#ff7f00
color_error=#ff0000

[windowtitle]
command=$HOME/.config/i3blocks/window-title.py
interval=persist

[qemurunning]
command=pgrep qemu-system >/dev/null && printf " Qemu \n\n$color_warning\n"
interval=10

[brightness]
command=$HOME/.config/i3blocks/brightness.sh
interval=once
signal=1

[power]
command=$HOME/.config/i3blocks/power.sh
interval=60

[cputemp]
command=$HOME/.config/i3blocks/cpu-temp.sh
interval=10

[gputemp]
command=$HOME/.config/i3blocks/gpu-temp.sh
interval=10

[volume]
command=$HOME/.config/i3blocks/audio.sh
interval=once
signal=1

[datetime]
command=echo " $(date "+%H:%M")   $(date +"%a, %d.%m.%Y")"
interval=10
